<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:stretchColumns="1"

    >
<TableRow>
    <TextView android:text="ID"/>
    <EditText android:hint="id를 입력하세요" android:layout_span="3"
        android:imeOptions="actionGo" android:id="@+id/EditText" android:maxLines="1"
        android:inputType="text"
        />
</TableRow>

    <TableRow>
        <TextView android:text="Password"/>
        <EditText android:hint="Password를 입력하세요."
            android:layout_span="3" android:imeOptions="actionNext"
            android:id="@+id/ed1" android:maxLines="1"
            android:inputType="textPassword"
            />

    </TableRow>
<TableRow>

    <Button android:text="확인" android:layout_column="2"></Button>
    <Button android:text="취소" ></Button>

</TableRow>
</TableLayout>